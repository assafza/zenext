{
    "name": "ZeNext - a better ZenDesk extension",
    "description": "This extension shows how to run a React app as a Chrome extension",
    "version": "1.0",

    "permissions": [
        "https://*.zendesk.com/",
        "storage",
        "tabs"
    ],
    "browser_action": {
        "default_icon": "logo_small.png",
        "default_popup": "index.html"
    },

    "manifest_version": 2,
    "background": {
        "scripts": ["background.js"]
    }
}
