{
    "name": "Zenext - a better ZenDesk extension",
    "description": "Advanced Zendesk ticket manager",
    "version": "1.0",

    "permissions": [
    	"notifications",
        "https://*.zendesk.com/",
        "storage",
        "tabs"
    ],
    "browser_action": {
        "default_icon": "logo_small.png",
        "default_popup": "index.html"
    },

    "manifest_version": 2,
    "background": {
    	"scripts": ["background.js"]
  	}
}
